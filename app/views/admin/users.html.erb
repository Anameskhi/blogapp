<div class="container">
<h1 class="text-center"><%=t("administrator")%></h1>
<%=render 'admin/nav_links'%>
<table class = "table table-dark table-striped">
  <thead>
  <tr>
    <th scope="col">Id</th>
    <th scope="col"><%=t("username")%></th>
    <th scope="col"><%=t("email")%></th>
    <th scope="col"><%=t("posts_title")%></th>
    
  </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
    <tr>
    <th scope = "row"><%=user.id%></th>
    <td><%= link_to user.username.truncate(15), user_profile_path(user) %></td>
    <td><%= user.email %></td>
    <td><%= t("#{user.role}") %></td>
    
    </tr>
    <%end%>
  </tbody>
</table>
</div>