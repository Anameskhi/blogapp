<div class="container">
<h1 class="text-center">Administrator</h1>
<%=render 'admin/nav_links'%>
<table class = "table table-dark table-striped">
  <thead>
  <tr>
    <th scope="col">Id</th>
    <th scope="col">Username</th>
    <th scope="col">Email</th>
    <th scope="col">Posts Title</th>
    
  </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
    <tr>
    <th scope = "row"><%=user.id%></th>
    <td><%= link_to user.username.truncate(15), admin_users_path(user) %></td>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
    
    </tr>
    <%end%>
  </tbody>
</table>
</div>