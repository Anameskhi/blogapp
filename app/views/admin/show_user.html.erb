<section class="0 bg-image"
  style="background-color: CadetBlue">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-15 col-md-19 col-lg-17 col-xl-36">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5"> 
<h1 class="row justify-content-md-center"> <%=t("profile_for")%> <%=@user.username%><h1>


<h6 class="text-center card-title">
 <%= I18n.t :post, count: @user.posts.size %> |
 <%= I18n.t :comment, count: @user.comments.size%> |
 <%= I18n.t :view, count: @user.views %> <br>

 <div>

 <% unless @user.admin? %>
  <%=button_to t("delete_account"), admin_delete_user_path(@user), method: :delete, data: { confirm: t("are_you_sure") }, class:"btn btn-danger"%>
 <%end%> 
 </div>

 </h6>
  
 <%= image_tag(@user.avatar_url,  class: "image_size") if @user.avatar? %>
 <div class="card-body">
   <% @posts.each do |post|%>
   
  
        <div class= "card_body">
        <h5 class="text-center card-title"><%= link_to post.title, post%></h5>
        <p class="text-center card-text"><%= post.body.to_plain_text.truncate_words(100) %></p>
        <p class="text-center card-text"> <%= link_to  t("edit") ,edit_user_registration_path if @user == current_user  %> </p>
        
        <p class="text-center card-footer text-muted"><%= t(time_ago_in_words(post.created_at))%></p>
        
 

   <%end%>
   </div>


       
        <%= pagy_bootstrap_nav(@pagy).html_safe%>
         </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

