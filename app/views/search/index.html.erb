<h1 class= "text-center"><%= I18n.t :result, count: @posts.count %></h1>

<div class="container">
<table class="table table-dark table-striped">
<thead>
  
<tr>
    <th><%= sort_link(@query, :title, t("title"), default_order: :asc)%></th>
    <th><%= sort_link(@query, :body, t("body"))%></th>
    <th><%= sort_link(@query, :body, t("category"))%></th>
    <th><%= sort_link(@query, :user_name, t("user"))%></th>
</tr>

</thead>
<tbody>
  <% @posts.each do |post|%>
<tr>
    <td><%= link_to post.title, post%></td>
    <td><%= post.body.to_plain_text.truncate_words(25)%></td>
    <td><%= link_to post.category.name, post.category%>
    <td><%= link_to post.user.username,  user_profile_path(post.user)%></td> 
    </tr>
<%end%>
</tbody>
</table>
</div>