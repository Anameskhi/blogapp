<section class="bg-image"
  style="background-color: CadetBlue">
  <div class="mask d-flex align-items-center gradient-custom-3">
    <div class="container ">
      <div class="row d-flex justify-content-center align-items-center ">
        <div class="col-12 col-md-19 col-lg-17 col-xl-36">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              
 <h2 class=" text-center mb-5"><%=t("profile_for")%> <%=@user.username%><h1>


<h6 class="text-center card-title">
 <%= I18n.t :post, count: @user.posts.size %> |
 <%= I18n.t :comment, count: @user.comments.size %> |
 <%= I18n.t :view, count: @user.views %> 

 </h6>
 <%= image_tag(@user.avatar_url,  class: "image_size") if @user.avatar? %>
 <div class="card-body">
   <% @posts.each do |post|%>
   
  
        <div class= "card_body">
        <h5 class="text-center card-title"><%= link_to post.title, post %></h5>
        <p class="text-center card-text"><%= post.body.to_plain_text.truncate_words(100) %></p>
        <p class="text-center card-text"> <%= link_to  t("edit") , edit_user_registration_path if @user == current_user %> </p>
        <p class="text-center card-footer text-muted"><%=t(:created)%> <%= t(time_ago_in_words(post.created_at))%></p>
        
 

   <%end%>
   </div>


        
          <%= pagy_bootstrap_nav(@pagy).html_safe%>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

